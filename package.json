{
  "name": "react-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.1.1",
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "axios": "^0.21.1",
    "date-fns": "^2.17.0",
    "ethers": "^5.0.31",
    "jdenticon": "^3.1.0",
    "libsemaphore": "^1.0.16",
    "patch-package": "^6.3.1",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-jdenticon": "0.0.9",
    "react-qr-reader": "^2.2.1",
    "react-router-dom": "^5.2.0",
    "runtypes": "^5.0.1",
    "use-http": "^1.0.16",
    "use-persisted-state": "^0.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@commitlint/prompt": "^12.0.1",
    "@ls-age/commitlint-circle": "^1.0.0",
    "@storybook/addon-actions": "^6.1.20",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^6.1.20",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/addons": "^6.1.20",
    "@storybook/preset-create-react-app": "^3.1.6",
    "@storybook/react": "^6.1.20",
    "@tailwindcss/forms": "^0.2.1",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/qrcode.react": "^1.0.1",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-qr-reader": "^2.1.3",
    "@types/react-router-dom": "^5.1.7",
    "@types/use-persisted-state": "^0.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "commitizen": "^4.2.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "eslint-plugin-testing-library": "^3.10.1",
    "git-cz": "^4.7.6",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "prettier": "^2.2.1",
    "react-scripts": "4.0.3",
    "tailwindcss": "^2.0.3",
    "testcafe": "1.11.0",
    "typescript": "~4.2.2"
  },
  "scripts": {
    "build": "NODE_ENV=production npm-run-all -s build:css build:js",
    "build:css": "postcss src/tailwind.css -o src/index.css",
    "build:js": "react-scripts build",
    "commit": "git-cz",
    "commit:retry": "npm run commit -- --retry",
    "eject": "react-scripts eject",
    "integration": "testcafe chrome integration/**/*.spec.ts --ts-config-path ./tsconfig.testcafe.json --app \"BROWSER=none npm run start\"",
    "integration:headless": "testcafe chrome:headless integration/**/*.spec.ts --ts-config-path ./tsconfig.testcafe.json --app \"http-server ./build --port 3000\" --app-init-delay 5000",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "dev": "PORT=9000 npm-run-all -p start:*",
    "start:css": "postcss src/tailwind.css -o src/index.css --watch",
    "start:js": "sleep 2 && craco start",
    "storybook": "start-storybook -p 9009 -s public",
    "storybook:build": "npm run build:css && build-storybook -s public",
    "test": "craco test",
    "postinstall": "patch-package"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
